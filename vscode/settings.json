{
    "diffEditor.codeLens": false,

    "editor.codeLens": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.rulers": [
        80,
        100
    ],
    "editor.smoothScrolling": true,
    //"editor.suggestSelection": "first",
    "editor.tabCompletion": "off",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.trimAutoWhitespace": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100,

    "workbench.colorCustomizations": {
        //"terminal.background":"#1D2021",
        //"terminal.background":"#282c34",
        //"terminal.foreground":"#abb2bf",
        "terminalCursor.background":"#f8f8f0",
        "terminalCursor.foreground":"#f8f8f0",
        "terminal.selectionBackground": "#3E4451",
        "terminal.ansiBlack": "#2d3139",
        "terminal.ansiBlue": "#528bff",
        "terminal.ansiGreen": "#98c379",
        "terminal.ansiYellow": "#FAC03B",
        "terminal.ansiCyan": "#56b6c2",
        "terminal.ansiMagenta": "#c678dd",
        "terminal.ansiRed": "#e06c75",
        "terminal.ansiWhite": "#d7dae0",
        "terminal.ansiBrightBlack": "#7f848e",
        "terminal.ansiBrightBlue": "#528bff",
        "terminal.ansiBrightGreen": "#98c379",
        "terminal.ansiBrightYellow": "#FAC03B",
        "terminal.ansiBrightCyan": "#56b6c2",
        "terminal.ansiBrightMagenta": "#7e0097",
        "terminal.ansiBrightRed": "#f44747",
        "terminal.ansiBrightWhite": "#d7dae0",
    },
    "workbench.colorTheme": "Monokai",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.startupEditor": "newUntitledFile",

    "files.associations": {},
    "files.autoSave": "off",
    "files.enableTrash": true,
    "files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true
	},

    "markdown.styles": [
        "https://mahalrs.github.io/dotfiles/vscode/markdown-preview-github.css"
    ],

    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "terminal.integrated.fontSize": 12,

    "go.lintOnSave": "package",
    "go.lintTool": "staticcheck",
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,

    "prettier.tabWidth": 4,
    "prettier.useTabs": false,

    "python.languageServer": "Microsoft",
    "python.pythonPath": "/Library/Frameworks/Python.framework/Versions/3.9/bin/python3",

    "[css]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
}
